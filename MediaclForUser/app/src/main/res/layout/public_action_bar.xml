<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@drawable/top_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/color_414141"
        android:textSize="@dimen/action_bar_text_size" />

    <ImageButton
        android:id="@+id/left_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/action_bar_btn_select"
        android:padding="@dimen/action_bar_left_btn_padding"
        android:src="@drawable/btn_back"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/right_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/action_bar_btn_select"
        android:padding="@dimen/action_bar_left_btn_padding"
        android:src="@drawable/btn_next"
        android:visibility="gone" />

    <TextView
        android:id="@+id/select_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:drawablePadding="6dp"
        android:drawableRight="@drawable/btn_select"
        android:gravity="center"
        android:padding="@dimen/action_bar_left_btn_padding"
        android:text="义诊"
        android:textSize="14sp"
        android:visibility="gone" />
    <TextView
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:drawablePadding="6dp"
        android:gravity="center"
        android:padding="@dimen/action_bar_left_btn_padding"
        android:text="兑换记录"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_AAAAAC" />
</RelativeLayout>