<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_EEEEEE"
    card:cardElevation="2dp"
    card:cardCornerRadius="2dp"
    card:cardUseCompatPadding="true"
    android:layout_margin="10dp"
    android:foreground="?selectableItemBackground"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:padding="10dp"
        android:textColor="@color/color_404040"
        android:text="北京即将举办15个义诊的线下活动主办方"/>
    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="11月14日"
        android:padding="10dp"
        android:textSize="15sp"
        android:textColor="@color/color_878787"
        />
        <ImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/big_image"/>
        <TextView
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_878787"
            android:textSize="15sp"
            android:padding="10dp"
            android:text="给平淡的生活加点料，现在开始就能抽义诊券啦！"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_EAEAEA"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查看详情"
            android:textSize="16sp"
            android:padding="10dp"
            android:textColor="@color/color_404040"
            android:drawableRight="@drawable/enter"/>
    </LinearLayout>
</android.support.v7.widget.CardView>